{
    "compilerOptions": {
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "baseUrl": "./",
        "paths": {
            "@/*": ["./*"],
            "@/components/*": ["components/*"],
            "@/i18n/*": ["app/i18n/*"],
            "@/public/*": ["public/*"],
            "@/types/*": ["types/*"],
            "@/utils/*": ["utils/*"]
        }
    },
    // "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "app/i18n/settings.d.ts", "app/i18n/index.ts", "app/i18n/settings.ts", "middleware.ts"],
    "include": ["next-env.d.ts", ".next/types/**/*.ts", "**/*.ts", "**/*.tsx"],
    "exclude": ["node_modules"]
}
